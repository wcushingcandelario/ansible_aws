<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure id="demo" class="org.eclipse.jetty.webapp.WebAppContext">

	<Set name="war">/opt/ovc/posWebapp</Set>
	<Set name="contextPath">/</Set>
	<Set name="extractWAR">false</Set>
	<Set name="maxFormContentSize">20000000</Set>

	<Set name="overrideDescriptor">/opt/jetty/webapps/pos.d/pos-override.xml</Set>

	<Set name="securityHandler">
		<New class="org.eclipse.jetty.security.ConstraintSecurityHandler">
			<Set name="loginService">
				<New class="org.eclipse.jetty.jaas.JAASLoginService">
					<Set name="name">OVCRealm</Set>
					<Set name="loginModuleName">OVCRealm</Set>
					<Set name="callbackHandlerClass">com.oneview.jetty.jaas.OVCCallbackHandler</Set>
				</New>
			</Set>
		</New>
	</Set>

	<Get id="encryptionHelper" class="com.oneview.util.AESEncryptionHelper" name="instance"/>
	<Ref refid="encryptionHelper">
		<Call id="password" name="decrypt">
			<Arg>pS6Uu4KU3B9G9FRg5IlnBg==</Arg>
		</Call>
	</Ref>

	<New class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg>
			<Ref id="demo"/>
		</Arg>
		<Arg>jdbc/ds</Arg>

		<Arg>

			<New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
				<Set name="URL">jdbc:mysql://{{ item.value.mysql_host }}:3306/{{ item.value.name }}_xdb</Set>
				<Set name="user">root</Set>
				<Set name="password">
					<Ref refid="password"/>
				</Set>
			</New>

		</Arg>
	</New>

	<New id="jmsConnectionFactory" class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg>
			<Ref id="demo"/>
		</Arg>
		<Arg>jms/connectionFactory</Arg>
		<Arg>
			<New class="org.skyscreamer.nevado.jms.NevadoConnectionFactory">
				<Set name="sqsConnectorFactory">
					<New class="org.skyscreamer.nevado.jms.connector.oneviewcommerce.ShadedPlainTextAmazonSQSConnectorFactory"/>
				</Set>
				<Set name="awsSQSEndpoint">sqs.us-east-1.amazonaws.com</Set>
				<Set name="awsAccessKey"></Set>
				<Set name="awsSecretKey"></Set>
			</New>
		</Arg>
	</New>
	<New id="jmsQueue" class="org.eclipse.jetty.plus.jndi.Resource">
		<Arg>
			<Ref id="demo"/>
		</Arg>
		<Arg>jms/destination1</Arg>
		<Arg>
			<New class="org.skyscreamer.nevado.jms.destination.NevadoQueue">
				<Arg>destination1</Arg>
				<Set name="queueUrl">{{ item.value.sqs_queue }}</Set>
			</New>
		</Arg>
	</New>

</Configure>
